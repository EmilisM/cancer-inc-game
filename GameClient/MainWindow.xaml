<Window x:Class="GameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="600" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Canvas Height="600" Grid.Row="0" Name="GameView" />
        <ListBox Name="LoggerList" Height="160" FontSize="12" VerticalAlignment="Top" Grid.Row="1"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>